<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <header>
        <%- include('../partials/nav', { active: 'index' }) %>
    </header>
    <div class="container">
        <%- include('../partials/sidebar', { active: 'index' }) %>
            <div id="content" class="snippet-hidden">
                <div id="mainbar">
                    <div class="container" id="topquestion">
                        <div class="row">
                            <div class="col">
                                <h1 class="wackoverflow-title display-5">Top Questions</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col"></div>
                            <div class="col-5">
                                <div class="btn-group" role="group" aria-label="Basic outlined example">
                                    <button type="button" class="btn btn-outline-primary">Intresting</button>
                                    <button type="button" class="btn btn-outline-primary">Bountied</button>
                                    <button type="button" class="btn btn-outline-primary">Hot</button>
                                    <button type="button" class="btn btn-outline-primary">Week</button>
                                    <button type="button" class="btn btn-outline-primary">Month</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="qlist">
                        <% data.forEach((row)=> {%>
                            <ul class="list-group list-group-flush">

                                <li class="list-group-item">
                                    <a href="/question" class="stretched-link">
                                        <%= row.Headline %>
                                    </a>
                                </li>

                            </ul>
                            <%}) %>
                    </div>
                </div>
            </div>
    </div>
    </div>
    <!--
        <footer>
            <% include ('../partials/footer') %>
        </footer>
 -->
</body>

</html>
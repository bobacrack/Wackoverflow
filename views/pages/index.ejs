<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <header>
        <%- include('../partials/nav', { active: 'index' }) %>
    </header>
    <div class="container">
        <%- include('../partials/sidebar', { active: 'index' }) %>
            <div id="content" class="snippet-hidden">
                <div id="mainbar">
                    <div class="grid">
                        <div class="row justify-content-center" id="headline-container">
                            <div class="col-xs-12 col-sm-8" id="headline">
                                <h1 class="wackoverflow-title display-5">Top Questions</h1>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-xs-12 col-sm-8">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Message</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="qlist">
                            <% shouts.forEach((row)=> {%>
                                <tr>
                                    <th scope="row">
                                        <%= row.TopicID %>
                                    </th>
                                    <td>
                                        <%= row.Headline %>
                                    </td>
                                    <td>
                                        <%= row.Username %>
                                    </td>
                                </tr>
                                <%}) %>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <!--
        <footer>
            <% include ('../partials/footer') %>
        </footer>
 -->
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <div class="container">
        <h1>Login</h1>

        <br>
        <br>
        <form id="login-form" method="POST">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                <label for="inputUsername" class="col-form-label">Username</label>
                </div>
                <div class="col-auto">
                <input type="text" id="inputUsername" name="user" class="form-control" aria-describedby="passwordHelpInline">
                </div>
            </div>

        <br>

            <div class="row g-3 align-items-center">
                <div class="col-auto">
                  <label for="inputPassword6" class="col-form-label">Password</label>
                </div>
                <div class="col-auto">
                  <input type="password" name="pass" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline">
                </div>
                <div class="col-auto">
                  <span id="passwordHelpInline" class="form-text">
                    Must be 8-20 characters long.
                  </span>
                </div>
            </div>
            
            <br>
            <div id="uff" class="<%=data%>"></div>
            <script>
                const e = document.getElementById('uff') 
               
                document.addEventListener('DOMContentLoaded', function(event) {
                showAlertMessage(e.className)
                
            })
                
              </script>
            <div id="wrong-pw-message" class="alert alert-danger" role="alert">
                Wrong Password or Username
              </div>
              
              
        <br>
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <button name="submitButton" formaction="/request" type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-auto">
                <button name="createAccBttn" formaction="/create" type="submit" class="btn btn-dark">Create Account</button>
            </div>
        </div>
        </form>
    </div> 
    
</body>
</html>